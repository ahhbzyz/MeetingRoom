<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="textColorPrimary">@color/textColorPrimary</item>
        <item name="textColorSecondary">@color/textColorSecondary</item>
        <item name="statusBarCurrentDateTime">@color/statusBarCurrentDateTime</item>
        <item name="fastBooking">@color/fastBooking</item>
        <item name="timeSlotExpired">@color/timeSlotExpired</item>
        <item name="roomStatusAvailable">@color/roomStatusAvailable</item>
        <item name="roomStatusBusy">@color/roomStatusBusy</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="backgroundColor">@color/backgroundColorInverse</item>
        <item name="textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="statusBarCurrentDateTime">@color/statusBarCurrentDateTimeInverse</item>
        <item name="fastBooking">@color/fastBookingInverse</item>
        <item name="timeSlotExpired">@color/timeSlotExpiredInverse</item>
        <item name="roomStatusAvailable">@color/roomStatusAvailableInverse</item>
        <item name="roomStatusBusy">@color/roomStatusBusyInverse</item>
    </style>

    <style name="MyCalendarTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/roomStatusBusy</item>
        <item name="tabTextAppearance">@style/MyCalendarTabTextAppearance</item>
    </style>

    <style name="MyCalendarTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyRoomListTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyEventOrganizerDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>

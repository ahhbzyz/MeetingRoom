<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="08:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_start_time"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="-8dp"/>

    <ImageView
        android:id="@+id/img_timeline_bar"
        android:layout_height="match_parent"
        android:layout_width="8dp"
        android:background="@color/timeSlotExpired" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:background="@color/timeSlotExpired"
            android:id="@+id/view_item_divider"
            android:layout_height="0.5dp" />

        <FrameLayout
            android:id="@+id/layout_event_content_parent"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_event_content"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="8dp"
                android:paddingEnd="0dp">

                <TextView
                    android:text="08:45 - 10:15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_event_period" />

                <TextView
                    android:text="a.shevelev@corp.badoo.com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_event_info" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_daily_events"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context="com.badoo.meetingroom.presentation.view.fragment.DailyEventsFragment">

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_loading_data"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_daily_events"
        android:scrollbars="none"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/daily_event_list_top_margin"
        android:paddingBottom="@dimen/daily_event_list_bottom_margin" />

</RelativeLayout>

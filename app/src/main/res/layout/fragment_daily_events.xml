<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_daily_events"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.badoo.meetingroom.presentation.view.fragment.DailyEventsFragment">

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_loading_data"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_daily_events"
        android:scrollbars="none"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/layout_current_time_mark"
    android:visibility="invisible">

    <TextView
        android:text="17:30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_current_time"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:id="@+id/view_item_divider"
        android:layout_height="1.5dp" />
</LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.badoo.meetingroom.presentation.view.activity.RoomStatusActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_top_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_status_bar"
            android:layout_height="32dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/img_badoo_logo"
                android:layout_marginStart="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/ic_badoo_logo"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_current_date"
                android:textColor="@android:color/black"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar">

            <TextView
                android:text="Bahamas"
                android:transitionName ="roomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_room_name"
                android:textSize="48sp"
                android:layout_marginStart="32dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/black" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_room"
                android:id="@+id/img_room"
                android:adjustViewBounds="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="32dp"
                android:layout_gravity="end"/>

            <TextView
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_room"
                android:layout_toStartOf="@+id/img_room"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"
                android:layout_gravity="end"/>

            <ImageView
                android:layout_height="match_parent"
                android:src="@drawable/ic_calendar"
                android:id="@+id/img_calendar"
                android:layout_gravity="end"
                android:layout_marginEnd="48dp"
                android:adjustViewBounds="true"
                android:layout_width="36dp" />


        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <com.badoo.meetingroom.presentation.view.component.circletimerview.CircleView
                    android:id="@+id/circle_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_centerInParent="true"
                    android:id="@+id/layout_circle_timer_info">

                    <TextView
                        android:text="@string/available_for_upper_case"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_room_status"
                        android:textSize="32sp"
                        android:includeFontPadding="false"
                        android:textColor="@color/textColorBlack" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_room_status"
                        android:gravity="center_vertical|center_horizontal">

                        <TextView
                            android:text="1"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tv_timer_one"
                            android:textSize="80sp"
                            android:includeFontPadding="false"
                            android:textColor="@color/textColorBlack" />

                        <TextView
                            android:text="2"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tv_timer_two"
                            android:textSize="80sp"
                            android:includeFontPadding="false"
                            android:textColor="@color/textColorBlack" />

                        <TextView
                            android:text=":"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_timer_colon"
                            android:textSize="80sp"
                            android:textColor="@color/textColorBlack"
                            android:gravity="center_vertical|center_horizontal"
                            android:includeFontPadding="false"
                            android:layout_weight="1.2" />

                        <TextView
                            android:text="0"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tv_timer_three"
                            android:textSize="80sp"
                            android:includeFontPadding="false"
                            android:textColor="@color/textColorBlack" />

                        <TextView
                            android:text="0"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_timer_four"
                            android:textSize="80sp"
                            android:includeFontPadding="false"
                            android:textColor="@color/textColorBlack" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/img_book"
                        android:background="@drawable/btn_oval_grey"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_info_black_24px" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/layout_dnd"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_alert_white"
                        android:id="@+id/imageView"
                        android:adjustViewBounds="true" />

                    <TextView
                        android:text="DO NOT\nDISTURB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_dnd"
                        android:textSize="42sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3">

                <TextView
                    android:text="@string/fast_booking"
                    android:layout_width="match_parent"
                    android:id="@+id/tv_fast_book"
                    android:textSize="30sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingTop="32dp"
                    android:paddingBottom="32dp" />

                <FrameLayout
                    android:id="@+id/layout_btns"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal">
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:id="@+id/layout_bottom_content"
            android:layout_weight="6">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_horizontal_timeline"
                android:clipChildren="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>

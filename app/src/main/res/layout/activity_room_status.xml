<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.badoo.meetingroom.presentation.view.activity.RoomStatusActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_top_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_status_bar"
            android:layout_height="32dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/img_badoo_logo"
                android:layout_marginStart="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/ic_badoo_logo"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_current_date"
                android:textColor="@android:color/black"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar">

            <TextView
                android:text="Bahamas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_room_name"
                android:textSize="48sp"
                android:layout_marginStart="32dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/black" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_room"
                android:id="@+id/img_room"
                android:adjustViewBounds="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="32dp"
                android:layout_gravity="end"/>

            <TextView
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_room"
                android:layout_toStartOf="@+id/img_room"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"
                android:layout_gravity="end"/>

            <ImageView
                android:layout_height="match_parent"
                android:src="@drawable/ic_calendar"
                android:id="@+id/img_calendar"
                android:layout_gravity="end"
                android:layout_marginEnd="48dp"
                android:adjustViewBounds="true"
                android:layout_width="36dp" />


        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <com.badoo.meetingroom.presentation.view.component.circletimerview.CircleTimerView
                    android:id="@+id/ctv_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/img_book"
                    android:background="@drawable/btn_oval_grey"
                    android:layout_width="@dimen/circle_time_view_btn_diameter"
                    android:layout_height="@dimen/circle_time_view_btn_diameter"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:text="@string/fast_booking"
                    android:layout_width="match_parent"
                    android:id="@+id/tv_fast_book"
                    android:textSize="30sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingTop="32dp"
                    android:paddingBottom="32dp" />

                <LinearLayout
                    android:id="@+id/layout_btns"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:layout_weight="6"
            android:id="@+id/layout_bottom_content">

            <TextView
                android:text="fake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_current_time_fake"
                android:visibility="invisible" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_horizontal_timeline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_current_time_fake"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/horizontal_timeline_current_time_mark_left_margin"
                android:clipChildren="false"
                android:id="@+id/layout_current_time">

                <TextView
                    android:text="12:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_current_time"
                    android:layout_alignStart="@+id/layout_current_time"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <View
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:id="@+id/view_time_mark"
                    android:layout_width="@dimen/horizontal_timeline_current_time_mark_width" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>

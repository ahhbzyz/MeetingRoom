<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.badoo.meetingroom.presentation.view.activity.RoomEventsActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_status_bar"
        android:layout_height="32dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/img_badoo_logo"
            android:adjustViewBounds="true"
            android:layout_marginStart="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_badoo_logo" />

        <TextView
            android:text="Wednesday, 11, July"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_curr_date_time"
            android:textColor="@android:color/black"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar">

        <TextView
            android:text="Bahamas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_room_name"
            android:textSize="48sp"
            android:layout_marginStart="32dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_room"
            android:id="@+id/img_room"
            android:adjustViewBounds="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:layout_gravity="end"/>

        <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ava_rooms"
            android:layout_toStartOf="@+id/img_room"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"
            android:layout_gravity="end"/>

        <ImageView
            android:layout_height="match_parent"
            android:src="@drawable/ic_calendar"
            android:id="@+id/img_calendar"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:layout_width="36dp" />


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <com.badoo.meetingroom.presentation.view.component.circletimerview.CircleTimerView
                    android:id="@+id/ctv_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="0dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/layout_book_btn_parent">

                    <ImageView
                        android:id="@+id/img_book"
                        android:background="@drawable/btn_oval_confirm"
                        android:layout_width="@dimen/circle_time_btn_view_radius"
                        android:layout_height="@dimen/circle_time_btn_view_radius" />
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:text="Fast booking"
                    android:layout_width="match_parent"
                    android:id="@+id/tv_fast_book"
                    android:textSize="30sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingTop="32dp"
                    android:paddingBottom="16dp" />

                <LinearLayout
                    android:id="@+id/layout_btns"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical|center_horizontal">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <com.badoo.meetingroom.presentation.view.component.horizontaltimelineview.HorizontalTimelineView
                android:id="@+id/htv_room_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
